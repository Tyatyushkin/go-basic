# Server Configuration
SERVER_PORT=8484
GRPC_PORT=50051

# JWT Configuration
JWT_SECRET=your-secret-key-here

# Storage Configuration
# Options: json, mongodb
MPM_STORAGE_TYPE=json
MPM_DATA_PATH=/opt/mpm/data

# MongoDB Configuration
MONGO_ROOT_USERNAME=root
MONGO_ROOT_PASSWORD=changeMe123!
MONGO_DATABASE=mpm_db
MONGODB_HOST=mongodb
MONGODB_PORT=27017

# MongoDB Application User (optional, if different from root)
# MONGO_USERNAME=mpm_user
# MONGO_PASSWORD=mpm_password

# MongoDB URI (optional, overrides individual settings)
# MONGODB_URI=mongodb://user:pass@host:port/database?authSource=admin

# MongoDB Collection Names (optional, defaults shown)
# MONGO_COLLECTION_USERS=users
# MONGO_COLLECTION_ALBUMS=albums
# MONGO_COLLECTION_PHOTOS=photos
# MONGO_COLLECTION_TAGS=tags
# MONGO_COLLECTION_COMMENTS=comments

# MongoDB Connection Pool Settings (optional, defaults shown)
# MONGO_MAX_POOL_SIZE=100
# MONGO_MIN_POOL_SIZE=5
# MONGO_MAX_IDLE_TIME=30s
# MONGO_CONNECT_TIMEOUT=10s

# MongoDB Features (optional, defaults shown)
# MONGO_ENABLE_TRANSACTIONS=true
# MONGO_ENABLE_CHANGE_STREAMS=false

# MongoDB Express UI (optional)
# ME_BASICAUTH_USERNAME=admin
# ME_BASICAUTH_PASSWORD=changeMe456